<?xml version="1.0" encoding="iso-8859-1" ?>
<!DOCTYPE config SYSTEM "file://@prefix@/share/@PACKAGE@/config.dtd">

<config>

  <game>
    <nb_team player_per_team="1">1</nb_team>
    <max_turn>30</max_turn>
    <map>arena1.map</map>
  </game>

  <client>
    <rules>globulus</rules>
    <connect val="network" host="127.0.0.1" port="25150"
             game_uid="40" connect_on_startup="true" />
  </client>

  <client id="1">
    <champion>/home/victor/stechec/local/prolo2007/c/champion</champion>
    <mode replay="false" spectator="false" />
    <limit memory="10000" time="500" time_reserve="2500" />
    <debug valgrind="false" gdb="false" verbose="3" printloc="true" />
  </client>

  <client id="2">
    <champion>globulus_sdlvisu</champion>
    <mode replay="false" file="match.log" spectator="true" />
    <limit memory="0" time="0" time_reserve="0" />
    <debug valgrind="false" gdb="false" verbose="1" printloc="true" />
  </client>

  <server>
    <rules>globulus</rules>
    <options persistent="false" start_game_timeout="30" />
    <listen port="25150" />
    <log enabled="false" file="match.log" />
    <nb_spectator>1</nb_spectator>
    <debug verbose="2" printloc="true" />
    <server_debug verbose="2" printloc="false" />
  </server>

</config>
