<?xml version="1.0" encoding="UTF-8" standalone="yes" ?> <!-- -*-SGML-*- -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

<!-- definition of simple types -->

<xs:element name="formation" type="xs:string"/> <!-- reference to another xml file -->
