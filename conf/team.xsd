</xs:element>


<xs:element name="player">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="positionid"/>
      <xs:element ref="ma"/>
      <xs:element ref="st"/>
      <xs:element ref="ag"/>
      <xs:element ref="av"/>
      <xs:element ref="cost"/>
      <xs:element ref="skill" minOccurs="0" maxOccurs="12"/>
      <xs:element ref="injury" minOccurs="0"/>
      <xs:element ref="com"/>
      <xs:element ref="int"/>
      <xs:element ref="td"/>
      <xs:element ref="cas"/>
      <xs:element ref="mpv"/>
      <xs:element ref="spp"/>
    </xs:sequence>
    <xs:attribute ref="name" use="required" />
    <xs:attribute ref="number" use="required" />
    <xs:attribute ref="position" use="required" />
    <xs:attribute ref="display" use="required" />
  </xs:complexType>
</xs:element>

<xs:element name="players">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="player" maxOccurs="16"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>


<xs:element name="team">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="formation"/>
      <xs:element ref="name"/>
      <xs:element ref="coach"/>
      <xs:element ref="rating"/>
      <xs:element ref="treasury"/>
      <xs:element ref="reroll"/>
      <xs:element ref="rerollcost"/>
      <xs:element ref="fanfactor"/>
      <xs:element ref="assistant"/>
      <xs:element ref="cheerleader"/>
      <xs:element ref="apothecary"/>
      <xs:element ref="players"/>
      <xs:element ref="background" minOccurs="0" />
    </xs:sequence>

    <xs:attribute ref="race" use="required" />
    <xs:attribute ref="bb_version" use="required" />
    <xs:attribute ref="emblem" use="required" />

  </xs:complexType>
</xs:element>

</xs:schema>

 
