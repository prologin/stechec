dnl Process this file with autoconf to produce a configure script.
AC_INIT(Makefile.am)

dnl Setup for automake
PARAGUI_VERSION=1.0.3

TEAMROSTER2_VERSION=0.0.1

dnl Detect the canonical host and target build environment
AC_CANONICAL_HOST
AC_CANONICAL_TARGET

AM_INIT_AUTOMAKE(teamroster2, $TEAMROSTER2_VERSION)

dnl Check for tools

AC_PROG_MAKE_SET
AC_PROG_CC
AC_PROG_CXX
AC_PROG_CPP
AC_PROG_INSTALL
AC_C_CONST

dnl Check for PARAGUI

AM_PATH_PARAGUI($PARAGUI_VERSION,
            :,
	    AC_MSG_ERROR([*** PARAGUI version $PARAGUI_VERSION not found!])
)

CXXFLAGS="$CFLAGS"
AC_SUBST(CXXFLAGS)

# Finally create all the generated files
AC_OUTPUT([
Makefile
])
