\newcommand{\exampleframe}[3]
{
	\frame{
		\frametitle{#3}
		\ifthenelse{\equal{#1}{1}}
		{
			% Then ( One frame )
			\begin{onlyenv}<1>		
				\codeimg{#2}
			\end{onlyenv}
		
			\begin{onlyenv}<2>
			\begin{small}
				\input{generated/#2.tex}
			\end{small}
			\end{onlyenv}
		}
		{
			% else ( 2 or 3 frames)
			\begin{onlyenv}<1>		
				\codeimg{#2-1}
			\end{onlyenv}

			\begin{onlyenv}<2>		
				\codeimg{#2-2}
			\end{onlyenv}
		
			\ifthenelse{\equal{#1}{2}}
			{
				%then (frame = 2)
				\begin{onlyenv}<3>
				\begin{small}
					\input{generated/#2.tex}
				\end{small}
				\end{onlyenv}
			}
			{
				% else ( frame = 3)
				\begin{onlyenv}<3>		
					\codeimg{#2-3}
				\end{onlyenv}

				\begin{onlyenv}<4>
				\begin{tabular}{l}
					\begin{small}
						\input{generated/#2.tex}
					\begin{small} \\
				\end{tabular}
				\end{onlyenv}
			}
		}
	}
}

